<Window x:Class="inventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:inventory"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="764" Width="1174">
    <Grid Margin="10,44,10,14"
          Name ="MainGrid"
    >
        <Grid HorizontalAlignment="Left" Height="375" Margin="849,26,0,0" VerticalAlignment="Top" Width="280">
            <DataGrid 
                x:Name ="ledger" Margin="0,48,-2,57" SelectionChanged="ledger_SelectionChanged" IsReadOnly="True"
         />
            <Button Margin="10,323,187,24" Click="ConfirmLedger_Click" Content="Confirm"/>
            <StackPanel HorizontalAlignment="Left" Height="33" Margin="0,10,0,0" VerticalAlignment="Top" Width="238" Orientation="Horizontal">
                <RadioButton Content="Inbound" Height="22" Width="112"/>
                <RadioButton Content="Outbound" Height="22" Width="92"/>
            </StackPanel>
        </Grid>




        <Grid Margin="10,10,333,32" Visibility="Visible">
            <Border BorderThickness="1" BorderBrush="Black" Margin="0,0,10,0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="#FF765E52" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Button Margin="629,127,44,471" Click="CreateNewBook_Click" Content="New Book"/>
            </Border>
            <DataGrid 
                x:Name ="dg"
                SelectedCellsChanged="dg_SelectedCellsChanged" Margin="10,16,219,324"
         />
            <DataGrid 
                x:Name ="dg2" Margin="10,329,219,11"
         />
        </Grid>
        <Grid HorizontalAlignment="Left" Height="223" Margin="849,410,0,0" VerticalAlignment="Top" Width="279">
            <TextBlock HorizontalAlignment="Left" Height="24" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"><Run Language="en-ph" Text="Title"/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Height="24" Margin="10,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"><Run Language="en-ph" Text="Quantity"/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Height="24" Margin="10,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"><Run Language="en-ph" Text="Size"/></TextBlock>
            <TextBox x:Name="tbox_title" HorizontalAlignment="Left" Height="19" Margin="71,10,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" />
            <TextBox x:Name="tbox_quantity" HorizontalAlignment="Left" Height="19" Margin="71,39,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" />
            <TextBox x:Name="tbox_size" HorizontalAlignment="Left" Height="19" Margin="71,68,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="166" />
            <Button Content="Add To Ledger" HorizontalAlignment="Left" Margin="10,149,0,0" VerticalAlignment="Top" Height="30" Width="86" Click="AddToLedger_Click"/>

        </Grid>




    </Grid>

</Window>
